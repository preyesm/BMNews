<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/text_view_style</item>
    </style>

    <style name="text_view_style" parent="android:Widget.TextView">
        <item name="android:background">@drawable/ripple_effect_for_text</item>
    </style>

    <style name="toolbar" parent="ThemeOverlay.AppCompat">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="feed_list_item_shimmer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/grey2</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/onbaording_grey</item>
        <!-- Used for the background -->
        <item name="android:background">#000000</item>
    </style>

    <style name="item_margin">
        <item name="android:layout_marginTop">@dimen/d16</item>
        <item name="android:layout_marginStart">@dimen/d24</item>
        <item name="android:layout_marginEnd">@dimen/d24</item>
        <item name="android:layout_marginBottom">@dimen/d16</item>
    </style>

</resources>
